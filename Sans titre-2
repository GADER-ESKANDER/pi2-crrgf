	}//fin de la fonction rechercherUnEtudiant()
	/**
	 * Supprimer un étudiant à partir de son idEtudiant
	 * Les tables sont innoDB et avec des contraintes ON DELETE CASCADE
	 * @return boolean true si la suppression s'est bien déroulée
	 * false dans tous les autres cas
	 */
	function supprimerEtudiant_innoDB(){
		//Connexion à la base de données
		$oConnexion = new MySqliLib();
		//Requete de suppression d'étudiant identifié par son idEtudiant
		$sRequete = "
			DELETE FROM personnes
			WHERE idPersonne = ".$this->getIdEtudiant().";";
		echo $sRequete;
		//Exécuter la requête
		return $oConnexion->executer($sRequete);
	}
	
	/**
	 * Ajouter un étudiant
	 * @return boolean true si l'ajout s'est bien déroulé
	 * false dans tous les autres cas.
	 */
	function ajouterEtudiant(){
		//Connexion à la base de données
		$oConnexion = new MySqliLib();
		//Requete d'ajout de l'étudiant
		$sRequete = "
			INSERT INTO personnes
			SET sNomPersonne = '".$oConnexion->getConnect()->escape_string($this->sNom)."',"
			."  sPrenomPersonne = '".$oConnexion->getConnect()->escape_string($this->sPrenom)."',"
			."  iAgePersonne = ".$this->iAge."
		";
		//Exécuter la requête
		if($oConnexion->executer($sRequete) == true){
			return $oConnexion->getConnect()->insert_id;
		}
		return false;
	}
	/**
	 * Ajouter un étudiant
	 * @return boolean true si l'ajout s'est bien déroulé
	 * false dans tous les autres cas.
	 */
	function modifierEtudiant(){
		//Connexion à la base de données
		$oConnexion = new MySqliLib();
		//Requete de modification de l'étudiant
		$sRequete = "
			UPDATE personnes
			SET sNomPersonne = '".$oConnexion->getConnect()->escape_string($this->sNom)."',"
			."  sPrenomPersonne = '".$oConnexion->getConnect()->escape_string($this->sPrenom)."',"
			."  iAgePersonne = ".$this->iAge."
			WHERE idPersonne = ".$this->idEtudiant."
		";	
		//Exécuter la requête
		return $oConnexion->executer($sRequete);
	}
	
	
	/**
	 * Rechercher tous les étudiants de la base de données
	 * @return array ce tableau contient des objets Etudiant
	 */
	 public static function rechercherListeDesEtudiants(){
	 	//Connexion à la base de données
	 	$oConnexion = new MySqliLib();
	 	//Requête de recherche de tous les étudiants
	 	$sRequete = "
	 		SELECT * FROM personnes
	 	";
	 	//Exécuter la requête
	 	$oResult = $oConnexion->executer($sRequete);
	 	//Récupérer le tableau des enregistrements
	 	$aEnreg = $oConnexion->recupererTableau($oResult);
		$aEtudiants = array();
	 	//Pour tous les enregistrements
	 	for($iEnreg=0; $iEnreg<count($aEnreg); $iEnreg++){
	 		//affecter un objet à un élément du tableau
	 		$aEtudiants[$iEnreg] =  new Etudiant($aEnreg[$iEnreg]['idPersonne'], $aEnreg[$iEnreg]['sNomPersonne'], $aEnreg[$iEnreg]['sPrenomPersonne'], $aEnreg[$iEnreg]['iAgePersonne']);
	 	}
	 	//retourner le tableau d'objets
	 	return $aEtudiants;
	 }//fin de la fonction rechercherListeDesEtudiants()
	 
	 
	 
	
